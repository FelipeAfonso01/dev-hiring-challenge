<div class="container-fluid flex-grow-1 container-p-y">

  <%= link_to(repositories_path) do %>
    <button type="button" class="btn btn-lg btn-info" style="background-color: #EF0E44">
      <span class="fas fa-angle-left"></span>&nbsp;&nbsp;Voltar
    </button>
  <% end %>

  <h3 class="py-3 mb-4">
    Detalhes do Repositório - <%= @repository.name.camelize %>
  </h3>

  <div class="row">
    <div class="col">
      <div class="card mb-4">
        <h6 class="card-header">Descrição</h6>
        <div class="card-body">
          <%= @repository.description %>
        </div>
      </div>
      <div class="card mb-4">
        <h6 class="card-header">URL para o Github</h6>
        <div class="card-body p-3">
          <a href="<%= @repository.github_url %>">
            <%= @repository.github_url %>
          </a>
        </div>
      </div>
    </div>

    <div class="col-md-4 col-xl-3">
      <div class="card mb-4">
        <h6 class="card-header">Informações</h6>
        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="text-muted">Data de Criação:</div>
            <div><%= I18n.l(@repository.creation_date, format: :short) %></div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="text-muted">Linguagem:</div>
            <div><%= @repository.language %></div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="text-muted">Total de Estrelas:</div>
            <div><span><%= @repository.stargazers_count %>
              <i class="fas fa-star text-warning"></i></span></div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="text-muted">Total de forks:</div>
            <div><%= @repository.forks_count %></div>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="text-muted">Total de issues abertas:</div>
            <div><%= @repository.open_issues_count %></div>
          </li>
        </ul>
      </div>

      <div class="card mb-4">
        <h6 class="card-header with-elements">
          <span class="card-header-title">Criador</span>
        </h6>
        <ul class="list-group list-group-flush">
          <a href="<%= @repository.owner.github_url %>" target="_blank">
            <li class="list-group-item">
              <div class="media align-items-center">
                <img src="<%= @repository.owner.avatar_url %>" class="d-block ui-w-30 rounded-circle" style="height: 60px">
                <div class="media-body px-2 ml-2">
                  <span class="text-dark"><strong><%= @repository.owner.github_login %></strong></span>
                </div>
              </div>
            </li>
          </a>
        </ul>
      </div>
    </div>
  </div>
</div>